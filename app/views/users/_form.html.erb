<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded form-background text-white", local: true) do |f|%>
        <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :email, class: "col-2 col-forl-label" %>
            <div class="col-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email adress" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-forl-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit "Sign up", class: "btn btn-outline-secondary btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to articles ]", articles_path, class: "link" %>
  </div>
</div>