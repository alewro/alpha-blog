<h1>Articles</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Action</th>
  </thead>
  <body>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>
        <%= link_to "show", article %>
        <%= link_to "edit", edit_article_path(article) %>
        <%= link_to "delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>      
      </td>
    </tr>
    <% end %>
  </body>
</table>
