<h1 class="text-center mt-4">Categories</h1>

<div class= "apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-12 col-md-6 col-lg-4 mt-4 d-flex ">
        <div class="card text-center shadow-sm mb-5 bg-white rounded">
          <div class="card-body ">
            <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>